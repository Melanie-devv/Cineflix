{% extends 'base.html.twig' %}

{% block title %}Dvd{% endblock %}

{% block body %}
    <h1>Dvd</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ dvd.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ dvd.name }}</td>
            </tr>
            <tr>
                <th>Release_date</th>
                <td>{{ dvd.releaseDate ? dvd.releaseDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ dvd.duration }}</td>
            </tr>
            <tr>
                <th>Thumbnail</th>
                <td>{{ dvd.thumbnail }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ dvd.stock }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_dvd_index') }}">back to list</a>

    <a href="{{ path('app_dvd_edit', {'id': dvd.id}) }}">edit</a>

    {{ include('dvd/_delete_form.html.twig') }}
{% endblock %}
