{{ form_start(form) }}
    <div class="row">
        <div class="col-sm-6">
            {{ form_row(form.firstname) }}
        </div>
        <div class="col-sm-6">
            {{ form_row(form.name) }}
        </div>
    </div>
    {{ form_row(form.email) }}
    {{ form_row(form.plainPassword) }}
    <div class="d-flex justify-content-center">
        <button class="btn btn-primary">
            <i class="fas fa-save"></i> {{ button_label|default('Enregistrer') }}
        </button>
    </div> 
{{ form_end(form) }}
